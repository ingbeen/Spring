package com.spring.member2;

import java.util.ArrayList;

import org.apache.ibatis.session.SqlSession;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.spring.mapper.MemberMapper;

@Service
public class MemberService {

	@Autowired(required = true)
	private SqlSession sqlSession = null;
	
	public ArrayList<MemberVO> getMemberlist() {
		ArrayList<MemberVO> member_list = new ArrayList<MemberVO>();
		MemberMapper memberMapper = sqlSession.getMapper(MemberMapper.class);
		member_list = memberMapper.getMemberlist();

		return member_list;
	}
	
	public MemberVO selectMember(MemberVO memberVO) {
		MemberMapper memberMapper = sqlSession.getMapper(MemberMapper.class);
		MemberVO vo = sqlSession.selectMember(memberVO);

		return vo;
	}
	
	public int insertMember(MemberVO memberVO) {
		int res = sqlSession.insertMember(memberVO);

		return res;
	}

	public int userCheck(MemberVO memberVO) {
		int res = sqlSession.userCheck(memberVO);

		return res;
	}

	public int updateMember(MemberVO memberVO) {
		int res = sqlSession.updateMember(memberVO);

		return res;
	}

	public int deleteMember(MemberVO memberVO) {
		int res = sqlSession.deleteMember(memberVO);

		return res;
	}
}
